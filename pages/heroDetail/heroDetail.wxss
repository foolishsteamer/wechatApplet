/* pages/heroDetail/heroDetail.wxss */
swiper{
  height: 192px;
}
swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
  height: 192px;
}
#info{
  display: flex;
}
.flex-left{
  width: 160px;
}
.flex-right{
  flex: 1;
}
.flex-left .name {
  color: #9acd32;
  font-size: 20px;
}

.flex-left .title {
  color:#ff69b4;
  font-size:25px;
}

.flex-left .tags {
  background-color: skyblue;
  color:white;
  border-radius: 4px;
  padding: 2px;
  margin-right: 2px;
  font-size:13px;
}
.flex-right{
  margin: 5px;
  padding: 3px;
  box-shadow: 0 0 10px black;
  background-color: #ffe6a9;
}

