swiper{
  height: 384rpx;
}
swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
  height: 384rpx;
}
#info{
  display: flex;
}
.flex-left{
  width: 320rpx;
}
.flex-right{
  flex: 1;
}
.flex-left .name {
  color: #9acd32;
  font-size: 40rpx;
}

.flex-left .title {
  color:#ff69b4;
  font-size:50rpx;
}

.flex-left .tags {
  background-color: skyblue;
  color:white;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-right: 4rpx;
  font-size:26rpx;
}
.flex-right{
  margin: 10rpx;
  padding: 6rpx;
  box-shadow: 0 0 20rpx black;
  background-color: #ffe6a9;
}

