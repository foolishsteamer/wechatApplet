/* pages/movie/movie.wxss */
.nav{
    height: 90rpx;
    border-bottom: 1rpx solid gray;
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
    align-items: center;
}
.nav .left text{
    font-size:40rpx;
    color:#05b512;
    font-weight: 700;
}
.nav .right text{
    font-size:30rpx;
    margin-right: 35rpx;
}
.nav .right text:nth-child(1){
    color:#2384e8;
}
.nav .right text:nth-child(2){
    color:#a5806a;
}
.nav .right text:nth-child(3){
    color:#e4a813;
}
.nav .right text:nth-child(4){
    color:#2ab8cc;
}
.nav .right icon{
    transform: translateY(3rpx)
}
.section .title{
    height: 100rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.section .title text{
    font-size:30rpx;
}
.section .title navigator{
    font-size:26rpx;
    color:#52c264;
}
 scroll-view{
    /* 设置父元素的宽度 */
    width: 100%;
    /* 设置不允许换行 */
    white-space: nowrap;
    /* padding-left: 30rpx; */
}
scroll-view .item:first-child{
    margin-left: 30rpx;
}
scroll-view .item{
    width: 200rpx;
    /* height: 300rpx; */
    margin-right: 20rpx;
    /* background-color: hotpink; */
    /* 子元素变为inline-block */
    display: inline-block;
}
scroll-view .item navigator{
    display: block;
}
scroll-view .item navigator image{
    display: block;
    width: 100%;
    height: 284rpx;
}
scroll-view .item text{
    text-align: center;
    margin-top: 20rpx;
    font-size:30rpx;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
scroll-view .item view.star-box{
    margin-top: 14rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
scroll-view .item view.star-box image{
    width: 20rpx;
    height: 20rpx;
}
scroll-view .item view.star-box .score{
    color:hotpink;
    font-size:22rpx;
    margin-top: 0;
}